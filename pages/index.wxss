@import 'font.wxss';
@import 'gif/index.wxss';

page {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background-color: #333333;
}

.clock {
  position: relative;
  top: -44rpx;
  display: flex;
  flex-flow: column wrap;
  width: 640rpx;
  height: 200rpx;
  text-align: center;
  font-family: "RobotoMono-Light";
}

.clock-rotate {
  top: -11rpx;
  transform:rotate(90deg) scale(1.7);
}

.block {
  width: 7.2906249999999995%;
  height: 20%;
  color: #474747;
  font-size: 32rpx;
  line-height: 40rpx;
  transition: 0.4s;
}

.block-sp1 {
  margin-right: 20rpx;
}

.block-sp2 {
  margin-right: 40rpx;
}

.block-active {
  color: #f5f5f5;
  font-family: "RobotoMono-Medium";
}

.block-second {
  color: #FF8300;
  font-family: "RobotoMono-Medium";
}

.divider {
  position: absolute;
  width: 4rpx;
  background-color: #f5f5f5;
  height: 60%;
  top: 20%;
  left: calc(50% - 2rpx);
}